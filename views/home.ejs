<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <% if (locals.id) { %> Generated Short URL ->
    <a href="http://localhost:8000/url/<%= locals.id %>/"
      >http://localhost:8000/url/<%= locals.id %>/</a
    >
    <% } %>

    <form action="/url" method="POST">
      <label for="url">Enter a URL</label>
      <input
        name="url"
        id="url"
        type="text"
        placeholder="https://www.example.com"
      />
      <button type="submit">Shorten</button>
    </form>

    <% if (locals.urlList) { %>
    <table>
      <tr>
        <th>S no.</th>
        <th>ShortId</th>
        <th>RedirectURL</th>
        <th>Clicks</th>
      </tr>

      <% locals.urlList.forEach((item, index) => { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= item.shortId %></td>
        <td><%= item.redirectUrl %></td>
        <td><%= item.visitHistory.length %></td>
      </tr>
      <% }) %>
    </table>
    <% } %>
    <% if (locals.id) { %>
      <a href="/">Back to Home</a>     
    <% } %>
  </body>
</html>
